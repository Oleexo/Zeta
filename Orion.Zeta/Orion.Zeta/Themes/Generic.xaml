<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Orion.Zeta.Controls">


	<Style TargetType="{x:Type controls:TextSuggestBox}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type controls:TextSuggestBox}">
					<Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
						<Grid>
							<TextBox Padding="0" Margin="0" Text="{TemplateBinding Suggestion}" FontSize="{TemplateBinding FontSize}" Foreground="Gray" BorderThickness="0"></TextBox>
							<TextBox Padding="0" Margin="0" Text="{TemplateBinding Text}" FontSize="{TemplateBinding FontSize}" Background="Transparent" BorderThickness="0"></TextBox>
						</Grid>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
